#------------------------------------------------------------------------------
#
#                             CPS1 Makefile
#
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# File include path
#------------------------------------------------------------------------------

INCDIR += \
	src/cpu/m68000 \
	src/cpu/z80 \
	src/cps1


#------------------------------------------------------------------------------
# Object Directory
#------------------------------------------------------------------------------

OBJDIRS += \
	cpu/m68000 \
	cpu/z80 \
	cps1


#------------------------------------------------------------------------------
# Object Files (common)
#------------------------------------------------------------------------------

MAINOBJS += \
	cpu/m68000/m68000.o \
	cpu/m68000/c68k.o \
	cpu/z80/z80.o \
	cpu/z80/cz80.o \
	common/coin.o


#------------------------------------------------------------------------------
# Object Files (CPS1)
#------------------------------------------------------------------------------

COREOBJS = \
	cps1/cps1.o \
	cps1/driver.o \
	cps1/memintrf.o \
	cps1/inptport.o \
	cps1/dipsw.o \
	cps1/timer.o \
	cps1/vidhrdw.o \
	cps1/$(OS)_sprite.o \
	cps1/eeprom.o \
	cps1/kabuki.o \
	sound/2151intf.o \
	sound/ym2151.o \
	sound/qsound.o

ifeq ($(NO_GUI), 0)
ICONOBJS = \
	$(OS)/icon/cps_s.o \
	$(OS)/icon/cps_l.o
endif
